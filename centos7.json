{
  "variables": {
    "version": "0.0.1",
    "access_token": "p94lIo2aX6Jjvg.atlasv1.rBXxKsVWlXJjMqCzKHIBDSVECaKc1mImCAlFUpV7NPDcjMsBNYR3czU5aHnuFwlAjD0",
    "cwd": "{{ env `PWD` }}",
    "headless": "false",
    "description": "CentOS 7 DevBox",
    "iso_image": "CentOS-7-x86_64-DVD-1810.iso",
    "iso_baseurl": "http://centos.mirror.transip.nl/7/isos/x86_64/",
    "iso_checksum": "6d44331cc4f6c506c7bbe9feb8468fad6c51a88ca1393ca6b8b486ea04bec3c1",
    "vm_name": "packer-centos-7-x86_64"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/ansible.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/main.yml",
      "galaxy_file": "requirements.yml",
      "galaxycommand": "ansible-galaxy -c"
    },
    {
      "type": "file",
      "source": "/Applications/VMware Fusion.app/Contents/Library/isoimages/linux.iso",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/vmware.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_urls": [
        "{{ user `iso_image` }}",
        "{{ user `iso_baseurl` }}{{ user `iso_image` }}"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "vm_name": "{{ user `vm_name` }}",
      "cpus": 2,
      "memory": 2048,
      "version": "14"
    }
  ],
  "post-processors": [
    [
      {
        "output": "builds/{{.Provider}}-centos7.box",
        "type": "vagrant"
      }
    ]
  ]
}
